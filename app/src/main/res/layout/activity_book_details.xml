<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinator"

    tools:context=".BookDetailsActivity">


    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="249dp"
        android:layout_height="184dp"
        android:layout_marginTop="24dp"
        android:contentDescription="image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="54dp"
        android:layout_height="64dp"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:onClick="onClickDone"

        android:src="@drawable/baseline_done_black_18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.997"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/summa_textView"
        android:layout_width="28dp"
        android:layout_height="36dp"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:text="1"
        android:textColor="#050000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.143"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/plus_imageButton"
        android:layout_width="32dp"
        android:layout_height="31dp"
        android:layout_marginBottom="28dp"
        android:background="@color/buttonCollor"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.243"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_add_circle_outline_black_18dp" />

    <ImageButton
        android:id="@+id/minus_imageButton"
        android:layout_width="31dp"
        android:layout_height="30dp"
        android:layout_marginBottom="28dp"
        android:background="@color/buttonCollor"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_remove_circle_outline_black_18dp" />

    <TextView
        android:id="@+id/sostav_text"
        android:layout_width="365dp"
        android:layout_height="180dp"
        android:text="TextView"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_image" />

    <TextView
        android:id="@+id/protein_text"
        android:layout_width="271dp"
        android:layout_height="25dp"
        android:layout_marginTop="56dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sostav_text" />

    <TextView
        android:id="@+id/zhir_text"
        android:layout_width="274dp"
        android:layout_height="24dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.201"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/protein_text" />

    <TextView
        android:id="@+id/kletchatka_text"
        android:layout_width="262dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zhir_text" />

    <TextView
        android:id="@+id/zola_text"
        android:layout_width="258dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textColor="#130909"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kletchatka_text" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="250dp"
        android:layout_height="27dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="328dp"
        android:text="Пищевая ценность на 100г"
        android:textColor="#050101"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sostav_text" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="407dp"
        android:layout_height="27dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="руб"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/floatingActionButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/cost_text_details" />

    <TextView
        android:id="@+id/cost_text_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="36dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plus_imageButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
